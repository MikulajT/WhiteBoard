@{
    Layout = "_BoardLayout";
    ViewData["Title"] = "Home Page";
}

<style>
    #sketchpadapp {
        display: flex;
        justify-content: center;
        margin: 10px;
    }

    body {
        overflow: hidden;
    }

    #canvas {
        background-image: linear-gradient(#c4effd 0.2px, transparent 0.1em), linear-gradient(90deg, #c4effd 0.2px, transparent .1em);
        background-size: 15px 15px;
    }

    input[type="button"] {
        float: left;
        font-size: 15px;
        padding: 10px;
        -webkit-appearance: none;
        background: #feee;
        border: 1px solid #888;
        margin-bottom: 5px;
        margin-right: 5px;
    }

    .button {
        display:inline-grid;
        border: none;
        padding: 5px;
        border-radius: 5px;
        background-color: white;
    }

    .button:focus {
        outline: none;
    }

    #drawing-color {
        display: inline-grid;
        width: 35px;
        height: 35px;
    }

    .button img {
        width: 35px;
        height: 35px;
    }
    .divider {
        display: inline-block;
        height: 65%;
        width: 1px;
       /* background-color: #e0e0e0;*/
        margin: 0 15px;
    }

</style>
<div id="sketchpadapp">
    <div class="rightside">
        <button type="submit" class="button" id="draw_button" onclick="changeDrawingMode()">
            <img src="~/resources/draw.png">
        </button>
        <div class="divider"></div>

        <button type="submit" class="button" id="text_button" onclick="changetextMode()">
            <img src="~/resources/text.png">
        </button>
        <div class="divider"></div>

        <button type="submit" class="button" onclick="document.getElementById('imageUpload').click();">
            <img src="~/resources/image.png">
        </button>
        <input type="file" id="imageUpload" accept="image/*" hidden />
        <div class="divider"></div>

        <input type="color" id="drawing-color" value="#000000" onchange="changeColor(this.value);">
        <div class="divider"></div>

        <button type="submit" class="button" onclick="tellServerToClear();">
            <img src="~/resources/clear.png">
        </button>
        <div class="divider"></div>

        <button type="submit" class="button" onclick="exportToImage();">
            <img src="~/resources/export.png">
        </button>
        <div class="divider"></div>

        <button type="submit" class="button" data-toggle="modal" data-target="#link">
            <img src="~/resources/share.png">
        </button>
    </div>
</div>
<canvas id="canvas"></canvas>


